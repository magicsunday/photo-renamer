{
    "name": "magicsunday/photo-renamer",
    "description": "Renames photos using EXIF date, patterns, filesize, ...",
    "license": "MIT",
    "keywords": [
        "rename",
        "live",
        "photo",
        "live photos",
        "Apple",
        "videos"
    ],
    "authors": [
        {
            "name": "Rico Sonntag",
            "email": "mail@ricosonntag.de",
            "homepage": "https://ricosonntag.de",
            "role": "Developer"
        }
    ],
    "config": {
        "discard-changes": true,
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform-check": false
    },
    "require": {
        "php": ">=8.3.0 <8.5.0",
        "ext-dom": "*",
        "ext-exif": "*",
        "symfony/config": "^7.0",
        "symfony/console": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/filesystem": "^7.0",
        "symfony/finder": "^7.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "overtrue/phplint": "^9.0",
        "phpdocumentor/reflection-docblock": "^5.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MagicSunday\\Renamer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MagicSunday\\Renamer\\Test\\": "test/"
        }
    },
    "scripts": {
        "ci:cgl": [
            "bin/php vendor/bin/php-cs-fixer fix --config .build/.php-cs-fixer.dist.php --diff --verbose --cache-file .build/.php-cs-fixer.cache"
        ],
        "ci:rector": [
            "bin/php vendor/bin/rector process --config .build/rector.php"
        ],
        "ci:test:php:cgl": [
            "@ci:cgl --dry-run"
        ],
        "ci:test:php:lint": [
            "bin/php vendor/bin/phplint --configuration .build/.phplint.yml"
        ],
        "ci:test:php:phpstan": [
            "bin/php vendor/bin/phpstan analyze --configuration .build/phpstan.neon --memory-limit=-1"
        ],
        "ci:test:php:phpstan:baseline": [
            "bin/php vendor/bin/phpstan analyze --configuration .build/phpstan.neon --memory-limit=-1 --generate-baseline .build/phpstan-baseline.neon --allow-empty-baseline"
        ],
        "ci:test:php:rector": [
            "@ci:rector --dry-run"
        ],
        "ci:test": [
            "@ci:test:php:lint",
            "@ci:test:php:phpstan",
            "@ci:test:php:rector",
            "@ci:test:php:cgl"
        ]
    }
}
